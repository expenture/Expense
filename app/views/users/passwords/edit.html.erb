<% flash[:alert] = "#{t(resource.errors.first[0], scope: :user)}#{resource.errors.first[1]}" if resource.errors.present? %>

<%= render layout: 'layouts/card_content' do %>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <label>
          <%= t('new_password', scope: :user) %>
          <% if @minimum_password_length %>
            (<%= t('minimum_password_length_note', scope: :user, minimum_password_length: @minimum_password_length) %>)
          <% end %>
        </label>
        <%= f.password_field :password, class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group">
        <label>
          <%= t('password_confirmation', scope: :user) %>
        </label>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= f.submit t('set_password', scope: :user), class: 'btn btn-rounded btn-primary btn-block' %>
    <% end %>
  </div>

  <div class="card-footer">
    <%= t('sign_up_page.already_have_an_account', scope: :user) %>
    <a href="<%= new_user_session_path %>">
      <%= t('sign_in', scope: :user) %>
    </a>
  </div>
<% end %>
